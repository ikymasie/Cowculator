<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iky.cowr.Fragments.CustomResultsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/lbl_Total_made"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:textSize="64sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lbl_Total_made"
                android:layout_centerHorizontal="true"
                android:text="You will make Approx."
                android:textColor="@color/primary_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/lbl_Total_made"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/lbl_Total_made"
                android:text="BWP" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/lbl_Total_made"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:background="@color/divider"
                android:orientation="vertical"></LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_beef_amount"
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingTop="8dp"
                    android:text="P2455.00"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/primary_light"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:text="Beef Carcus "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/divider"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_fixed_items_amount"
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingTop="8dp"
                    android:text="P2144.40"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/app_orange"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text="Fixed Price Items"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/divider"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/linearLayou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_wieghed_items_amount"
                    style="@style/AppTheme.Widget.TextView"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingTop="8dp"
                    android:text="P1877.90"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/app_purple"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lbl"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text="Weighed Items"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <devlight.io.library.ArcProgressStackView
                android:id="@+id/arcProgressStackView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:apsv_animated="true"
                app:apsv_animation_duration="2000"
                app:apsv_dragged="false"
                app:apsv_draw_width="75%"
                app:apsv_indicator_orientation="vertical"
                app:apsv_interpolator="@android:anim/bounce_interpolator"
                app:apsv_leveled="false"
                app:apsv_model_bg_enabled="false"
                app:apsv_model_offset="5dp"
                app:apsv_preview_bg="#ccc"
                app:apsv_preview_colors="@array/default_preview"
                app:apsv_rounded="false"
                app:apsv_shadow_angle="90"
                app:apsv_shadow_color="#000"
                app:apsv_shadow_distance="5dp"
                app:apsv_shadow_radius="10dp"
                app:apsv_shadowed="false"
                app:apsv_start_angle="270"
                app:apsv_sweep_angle="360"
                app:apsv_text_color="#fff"
                app:apsv_typeface="fonts/RobotoLight.ttf" />

            <TextView
                android:id="@+id/lblAmountOther"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:translationX="-12dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblAmountOther"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Excl. carcus"
                android:textColor="@color/secondary_text"
                android:textSize="11sp"
                android:translationX="-12dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lblExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="You make an extra P340 with other things you @string/i_sell"
            android:textColor="@color/secondary_text" />
    </LinearLayout>

</FrameLayout>
