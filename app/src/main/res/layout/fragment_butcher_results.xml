<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iky.cowr.Fragments.ButcherResultsFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:orientation="vertical"
        android:weightSum="6"
        tools:context="com.iky.cowr.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/primary"
            android:elevation="10dp"
            android:gravity="center">

            <EditText
                android:id="@+id/lblAmount"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_centerInParent="true"
                android:layout_centerVertical="false"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:hint="0.00"
                android:textColor="@color/icons"
                android:textColorHint="@color/transparent_white_light"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/lblDefaultUnit"
                style="@style/AppTheme.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/lblAmount"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/lblAmount"
                android:text="BWP"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/errorMargin"
                style="@style/AppTheme.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblAmount"
                android:layout_centerHorizontal="true"
                android:text="Give or take 6%"
                android:textColor="@color/icons"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lblAmount"
                android:layout_centerHorizontal="true"
                android:text="GRADE A BEEF GIVES:"
                android:textColor="@color/icons"

                fontPath="fonts/RobotoBold.ttf"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/grade_b_label"
                        style="@style/AppTheme.Widget.TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingTop="8dp"
                        android:text="P2455.00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/primary_light"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:text="GRADE B"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/divider"
                    android:minHeight="25px"
                    android:minWidth="25px"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/grade_c_label"
                        style="@style/AppTheme.Widget.TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingTop="8dp"
                        android:text="P2144.40"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_orange"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="8dp"
                        android:text="GRADE C"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/divider"
                    android:minHeight="25px"
                    android:minWidth="25px"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/linearLayou"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/grade_d_label"
                        style="@style/AppTheme.Widget.TextView"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingTop="8dp"
                        android:text="P1877.90"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/app_purple"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="8dp"
                        android:text="GRADE D "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/AppTheme.Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="PRICE BREAKDOWN"
                android:textColor="@color/primary_dark" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
